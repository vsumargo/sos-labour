<%- include('partials/head',{title:'employers'}) %>

<%- include('partials/navbar') %>


  <div class="row">
    <div class="col-2">
            <%- include('partials/sidebar') %>
    </div>
    <div class="col-10">
      <div><button> Find Labourers</button></div>
      <h3>Job Posted</h3>
      <div class="postedJobs">
        <%_ for (let job of jobs){ _%>
          <%_ if(job.dataValues.job_status == 'open'){ _%>
            <div class="card jobCard" data-jobID="<%= job.dataValues.id %>">
              <div class="card-header">
                <%= job.dataValues.address %>
              </div>
              <div class="card-body">
                <p class="card-text">Start Date: <%= job.dataValues.start_date %> </p>
                <p class="card-text">End Date: <%= job.dataValues.end_date %> </p>
                <p class="card-text">Site Manager: <%= job.dataValues.site_manager %> </p>
                <p class="card-text">Number of Applicants: <%= job.dataValues.Applieds.length %> </p>
              </div>
            </div>    
          <%_ } else { _%>
            <div class="card jobCard closedStatus" data-jobID="<%= job.dataValues.id %>">
              <div class="card-header closedStatus">
                <%= job.dataValues.address %>
              </div>
              <div class="card-body">
                <p class="card-text">Start Date: <%= job.dataValues.start_date %> </p>
                <p class="card-text">End Date: <%= job.dataValues.end_date %> </p>
                <p class="card-text">Site Manager: <%= job.dataValues.site_manager %> </p>
                <p class="card-text">Number of Applicants: <%= job.dataValues.Applieds.length %> </p>
              </div>
            </div>    
          <%_ } _%>
        <%_ } _%>
                
      </div>
    </div>
  </div>





<%- include('partials/footer') %>
